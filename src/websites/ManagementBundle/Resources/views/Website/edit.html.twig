{% block javascripts %}
{{ parent() }}
<script type="text/javascript" src="{{ asset('plugins/bootstrap-wysihtml5/wysihtml5-0.3.0.js') }}"></script>
<script type="text/javascript" src="{{ asset('plugins/bootstrap-wysihtml5/bootstrap-wysihtml5.js') }}"></script>
<script type="text/javascript" src="{{ asset('plugins/bootstrap-switch/js/bootstrap-switch.js') }}"></script>
<script>
	jQuery(document).ready(function(){
		if (!jQuery().wysihtml5) {
			return;
		}

		if ($('.wysihtml5').size() > 0) {
			$('.wysihtml5').wysihtml5({
				"stylesheets": ["{{ asset('plugins/bootstrap-wysihtml5/wysiwyg-color.css') }}"]
			});
		}

		$("[type=checkbox].switch").bootstrapSwitch({
			size: 'mini',
			handleWidth: 23,
			onColor: 'success',
			offColor: 'danger',
		});

	});
</script>
{% endblock %}
