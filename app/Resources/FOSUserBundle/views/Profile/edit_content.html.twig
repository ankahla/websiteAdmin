				<div class="col-md-12">
					<!-- BEGIN PROFILE SIDEBAR -->
					{% include "FOSUserBundle:Profile:profileSidebar.html.twig" %}
					<!-- END BEGIN PROFILE SIDEBAR -->
					<!-- BEGIN PROFILE CONTENT -->
					<div class="profile-content">
						<div class="row">
							<div class="col-md-12">
								<div class="portlet light">
									<div class="portlet-title tabbable-line">
										<div class="caption caption-md">
											<i class="icon-globe theme-font hide"></i>
											<span class="caption-subject font-blue-madison bold uppercase">Mon profil</span>
										</div>
										<ul class="nav nav-tabs">
											<li class="active">
												<a href="#tab_1_1" data-toggle="tab">Informations personnelles</a>
											</li>
											<li>
												<a href="#tab_1_2" data-toggle="tab">Photo de profil</a>
											</li>
											<li>
												<a href="#tab_1_3" data-toggle="tab">changer le mot de passe</a>
											</li>
										</ul>
									</div>
									<div class="portlet-body">
									<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit" role="form">
										<div class="tab-content">
											<div class="tab-pane active" id="tab_1_1">
													<div class="form-group">
														{{ form_label(form.lastName,form.lastName.vars.label, {label_attr:{class:'control-label'}})}}
														{{ form_widget(form.lastName, {attr:{class:'form-control'}})}}
													</div>
													<div class="form-group">
														{{ form_label(form.firstName,form.firstName.vars.label, {label_attr:{class:'control-label'}})}}
														{{ form_widget(form.firstName, {attr:{class:'form-control'}})}}
													</div>
													<div class="form-group">
														{{ form_label(form.function,form.function.vars.label, {label_attr:{class:'control-label'}})}}
														{{ form_widget(form.function, {attr:{class:'form-control'}})}}
													</div>
													<div class="form-group">
														{{ form_label(form.mobile,form.mobile.vars.label, {label_attr:{class:'control-label'}})}}
														{{ form_widget(form.mobile, {attr:{class:'form-control'}})}}
													</div>
													<div class="form-group">
														{{ form_label(form.phone,form.phone.vars.label, {label_attr:{class:'control-label'}})}}
														{{ form_widget(form.phone, {attr:{class:'form-control'}})}}
													</div>
													<div class="form-group">
														{{ form_label(form.fb,form.fb.vars.label, {label_attr:{class:'control-label'}})}}
														{{ form_widget(form.fb, {attr:{class:'form-control'}})}}
													</div>
													<div class="form-group">
														{{ form_label(form.skype,form.skype.vars.label, {label_attr:{class:'control-label'}})}}
														{{ form_widget(form.skype, {attr:{class:'form-control'}})}}
													</div>
													<div class="margiv-top-10">
														<input class="btn green-haze" type="submit" value="{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}" />
													</div>
													{{ form_widget(form._token) }}
											</div>
											<!-- END PERSONAL INFO TAB -->
											<!-- CHANGE AVATAR TAB -->
											<div class="tab-pane" id="tab_1_2">
												<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit" role="form">
													<div class="form-group">
														<div class="fileinput fileinput-new" data-provides="fileinput">
															<div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
															{% if app.user.avatar %}
															<img src="{{ asset(app.user.avatar) }}" alt=""/>
															{% else %}
																<img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image" alt=""/>
															{% endif %}
															
															</div>
															<div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;">
															</div>
															<div>
																<span class="btn default btn-file">
																<span class="fileinput-new">
																Selectionnez une image </span>
																<span class="fileinput-exists">
																Changer </span>
																{{ form_widget(form.avatar)}}
																</span>
																<a href="javascript:;" class="btn default fileinput-exists" data-dismiss="fileinput">
																Supprimer </a>
															</div>
														</div>
													</div>
													<div class="margin-top-10">
														<input class="btn green-haze" type="submit" value="{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}" />
													</div>
												</form>
											</div>
											<!-- END CHANGE AVATAR TAB -->
											<!-- CHANGE PASSWORD TAB -->
											<div class="tab-pane" id="tab_1_3">
												<form action="#">
													<div class="form-group">
														<label class="control-label">Current Password</label>
														<input type="password" class="form-control"/>
													</div>
													<div class="form-group">
														<label class="control-label">New Password</label>
														<input type="password" class="form-control"/>
													</div>
													<div class="form-group">
														<label class="control-label">Re-type New Password</label>
														<input type="password" class="form-control"/>
													</div>
													<div class="margin-top-10">
														<a href="javascript:;" class="btn green-haze">
														Change Password </a>
														<a href="javascript:;" class="btn default">
														Cancel </a>
													</div>
												</form>
											</div>
											<!-- END CHANGE PASSWORD TAB -->
											</form>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
					<!-- END PROFILE CONTENT -->
				</div>
